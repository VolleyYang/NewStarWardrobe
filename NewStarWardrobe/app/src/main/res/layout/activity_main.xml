<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yangshenglong.newstarwardrobe.MainActivity">
    <FrameLayout
        android:id="@+id/fl"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RadioGroup
        android:layout_weight="7"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RadioButton
            android:id="@+id/rbt_shop"
            android:button="@null"
            android:drawableTop="@drawable/selector_shop"
            android:checked="true"
            android:text="商城"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@drawable/color_radiobutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rbt_classify"
            android:drawableTop="@drawable/selector_classify"
            android:text="分类"
            android:textColor="@drawable/color_radiobutton"
            android:gravity="center"
            android:button="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rbt_fashion"
            android:drawableTop="@drawable/selector_fashion"
            android:textColor="@drawable/color_radiobutton"
            android:text="时尚圈"
            android:gravity="center"
            android:button="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rbt_message"
            android:drawableTop="@drawable/selector_message"
            android:textColor="@drawable/color_radiobutton"
            android:text="消息"
            android:gravity="center"
            android:button="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rbt_mine"
            android:drawableTop="@drawable/selector_mine"
            android:textColor="@drawable/color_radiobutton"
            android:text="我的"
            android:gravity="center"
            android:button="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </RadioGroup>


</LinearLayout>
