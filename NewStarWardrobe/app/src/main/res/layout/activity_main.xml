<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.yangshenglong.newstarwardrobe.MainActivity"
    >

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbt_shop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/selector_shop"
            android:gravity="center"
            android:text="商城"
            android:textColor="@drawable/color_radiobutton"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/rbt_classify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_classify"
            android:gravity="center"
            android:text="分类"
            android:textColor="@drawable/color_radiobutton"/>

        <RadioButton
            android:id="@+id/rbt_fashion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_fashion"
            android:gravity="center"
            android:text="时尚圈"
            android:textColor="@drawable/color_radiobutton"/>

        <RadioButton
            android:id="@+id/rbt_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_message"
            android:gravity="center"
            android:text="消息"
            android:textColor="@drawable/color_radiobutton"/>

        <RadioButton
            android:id="@+id/rbt_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_mine"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/color_radiobutton"/>
    </RadioGroup>


</LinearLayout>
