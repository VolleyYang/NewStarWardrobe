<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/blow_rv_iv_pic"
        android:src="@mipmap/ic_launcher"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/blow_rv_tv_content"
        android:layout_marginTop="5dp"
        android:text="潮流女生如何高效的打扮自己"
        android:layout_below="@id/blow_rv_iv_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/blow_rv_iv_userAuthor"
        android:layout_marginTop="5dp"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@id/blow_rv_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/blow_rv_tv_userName"
        android:text="小优雅"
        android:layout_below="@id/blow_rv_tv_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/blow_rv_iv_userAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/like"
        android:layout_toRightOf="@id/blow_rv_tv_userName"
        android:layout_below="@id/blow_rv_tv_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/buttom_community_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/recommend_blow_tv_count"
        android:layout_toRightOf="@id/like"
        android:layout_below="@id/blow_rv_tv_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:text="1234"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>